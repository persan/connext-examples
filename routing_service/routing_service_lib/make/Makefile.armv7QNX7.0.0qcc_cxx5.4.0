ARCH = armv7QNX7.0.0qcc_cxx5.4.0

export QNX_BASE =/opt/qnx700
export QNX_HOST =$(QNX_BASE)/host/linux/x86_64
export QNX_TARGET =$(QNX_BASE)/target/qnx7

DEFINES_ARCH_SPECIFIC = -DRTI_QNX -DRTI_QNX7

CC = ${QNX_HOST}/usr/bin/qcc
CFLAGS = -Vgcc/5.4.0,gcc_ntoarmv7le -Y_cxx -fPIC
CLD = ${QNX_HOST}/usr/bin/qcc
CLDFLAGS = -Vgcc/5.4.0,gcc_ntoarmv7le -Y_cxx
SYSLIBS =  -lm -lsocket

# The rest of the rules are in the 'Makefile.common'
include make/Makefile.common


